<h2><%= @seed.common_name %></h2>

<% if user_signed_in? %>
  <div id="need_form">
  <% if current_user.needing?(@seed) %>
    <%= render 'unneed' %>
  <% else %>
    <%= render 'need' %>
  <% end %>
  </div>
<% end %>

<b>Scientific Name:</b> <%= @seed.scientific_name %><br />
<b>Hardiness Zone:</b> <%= @seed.hardiness_zone %><br />
<b>Additional Info:</b> <%= @seed.additional_info %><br />

<%= render 'listings' %>

<%= link_to "Add a new listing", "/listings/new" %> | <%= link_to "Back to browse seeds", seeds_path %>
