<h1><%= @seed.common_name %></h1>

<% if user_signed_in? %>
  <div id="need_form">
  <% if current_user.needing?(@seed) %>
    <%= render 'unneed' %>
  <% else %>
    <%= render 'need' %>
  <% end %>
  </div>
<% end %>

<%= render :partial => 'seed_info', locals: { seed: @seed } %>

<%= render 'listings' %>

<%= link_to "Add a new listing", "/listings/new" %> | <%= link_to "Back to browse seeds", seeds_path %>
