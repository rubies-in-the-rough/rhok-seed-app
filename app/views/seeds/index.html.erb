<h2>Seeds</h2>

<%= link_to "Propose a new seed", new_seed_path %>

<div class="right">
<%= render partial: 'shared/seeds_search_form' %>
</div>

<table class="table table-striped table-condensed">

  <thead>
    <tr>
      <th>Common Name</th>
      <th>Scientific Name</th>
      <th>Listings</th>
    </tr>
  </thead>

  <tbody>
    <% @seeds.each do |seed| %>
      <tr>
        <td><%= link_to seed.common_name, seed_path(seed.id) %></td>
        <td><%= link_to seed.scientific_name, seed_path(seed.id) %></td>
        <td><%= seed.listings.length %></td>
      </tr>
    <% end %>
  </tbody>

</table>
