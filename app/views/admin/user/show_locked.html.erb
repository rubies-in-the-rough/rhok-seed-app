<h2>Locked Users</h2>
<table class="table table-striped table-condensed">

  <thead>
    <tr>
      <th>User</th>
      <th>Failed Login Attempts</th>
      <th>Time of Lock</th>
      <th>Unlock</th>
    </tr>
  </thead>

  <tbody>
    <% @locked_users.each do |locked_user| %>
      <tr>
        <td><%= locked_user.email %></td>
        <td><%= locked_user.failed_attempts %></td>
        <td><%= locked_user.locked_at %></td>
        <td>
          <%= form_for(locked_user, :url => admin_users_unlock_path(locked_user.id)) do |f| %>
            <%= f.submit "Unlock", class: "btn" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
