<h2>Pending Seed Approvals</h2>
<table class="table table-striped table-condensed">

  <thead>
    <tr>
      <th>Common Name</th>
      <th>Scientific Name</th>
      <th>Hardiness Zone</th>
      <th>Additional Info</th>
      <th>Approve</th>
    </tr>
  </thead>

  <tbody>
    <% @pending_seeds.each do |pending_seed| %>
      <tr>
        <td><%= pending_seed.common_name %></td>
        <td><%= pending_seed.scientific_name %></td>
        <td><%= pending_seed.hardiness_zone %></td>
        <td>
          <%= form_for(pending_seed, :url => admin_seeds_approve(locked_user.id)) do |f| %>
            <%= f.submit "Approve", class: "btn btn-success" %>
          <% end %>
          <%= form_for(pending_seed, :url => admin_seeds_reject(locked_user.id)) do |f| %>
            <%= f.submit "Reject", class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
