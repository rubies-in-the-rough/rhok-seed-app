<h1>Pending Seed Approvals</h1>
<table class="table table-striped table-condensed">

  <thead>
    <tr>
      <th>Common Name</th>
      <th>Scientific Name</th>
      <th>Hardiness Zone</th>
      <th>Additional Info</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pending_seeds.each do |pending_seed| %>
      <tr>
        <td><%= pending_seed.common_name %></td>
        <td><%= pending_seed.scientific_name %></td>
        <td><%= pending_seed.hardiness_zone %></td>
        <td><%= pending_seed.additional_info %></td>
        <td>
          <%= button_to "Accept", admin_seed_accept_path(pending_seed), :method => :put, :class => "btn btn-success" %>
          <%= button_to "Reject", admin_seed_path(pending_seed), :method => 'delete', :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
